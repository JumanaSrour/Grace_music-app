<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Forgotpassword">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="29dp"
        android:src="@drawable/slagon"
        app:layout_constraintBottom_toTopOf="@+id/resetpasswordScreen"
        app:layout_constraintEnd_toEndOf="@+id/detailsAboutReset"
        app:layout_constraintStart_toStartOf="@+id/detailsAboutReset"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resetpasswordScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="16dp"
        android:text="Reset Password"
        android:textColor="#A2A8AF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/detailsAboutReset"
        app:layout_constraintEnd_toEndOf="@+id/detailsAboutReset"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/detailsAboutReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="47dp"
        android:text="Enter your email to reset\n          your password"
        android:textColor="#A2A8AF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/gmailInput"
        app:layout_constraintEnd_toEndOf="@+id/gmailInput"
        app:layout_constraintTop_toBottomOf="@+id/resetpasswordScreen" />

    <EditText
        android:id="@+id/gmailInput"
        android:layout_width="330dp"
        android:layout_height="51dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/emailbtn"
        android:ems="10"
        android:textAlignment="center"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsAboutReset" />

    <Button
        android:id="@+id/reset"
        android:layout_width="339dp"
        android:layout_height="45dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="262dp"
        android:background="@drawable/resetbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gmailInput" />
</androidx.constraintlayout.widget.ConstraintLayout>